<% include ../partials/header %>
	<div class="container">
		<form class="new-form" action="/Items/new" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="items[name]" placeholder="name">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="items[image]" placeholder="image url">
			</div>
