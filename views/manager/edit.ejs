<% include ../partials/header %>
	<div class="container">
		<form class="new-form" action="/Items/<%= item._id %>/edit?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="items[name]" placeholder="name" value=<%= item.name %>>
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="items[image]" placeholder="image url" value=<%= item.image %>>
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="items[category]" placeholder="category" value=<%= item.category %>>
			</div>
			<div class="form-group">
				<input class="form-control" type="number" name="items[price]" placeholder="price" value=<%= item.price %>>
			</div>
			<div class="form-group">
				<textarea class="form-control" name="items[description]" rows="10" cols="40"><%= item.description %></textarea>
			</div>
			<button type="submit" class="btn btn-success"><i class='fa fa-floppy-o' aria-hidden='true'></i> Save</button>
			<a href="/Items/<%= item._id %>" class="btn btn-warning" id="cancel-btn"><i class='fa fa-times-circle' aria-hidden='true'></i> Cancel</a>
		</form>
		<form action="/Items/<%= item._id %>/delete?_method=DELETE" method="POST" class="new-form">
			<div class="form-group">
				<button class="btn btn-danger"><i class='fa fa-trash' aria-hidden='true'></i> Delete</button>
			</div>
		</form>
	</div>
<% include ../partials/footer %>
