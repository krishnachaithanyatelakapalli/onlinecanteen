<%- include('../partials/header', {user: user})%>
	<div class="container">
		<form class="new-form" action="/Items/<%= item._id %>/comment" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[author]" placeholder="Author" value=<%= user.username %>>
			</div>
			<div class="form-group">
				<textarea class="form-control" name="comment[content]"></textarea>
			</div>
			<button class="btn btn-primary submit-btn" type="submit"><i class='fa fa-floppy-o' aria-hidden='true'></i></button>
		</form>
		<a href="/Items/<%= item._id %>"Go Back</a>
	</div>
<% include ../partials/footer %>
